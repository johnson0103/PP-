​​int gridspacing = 10;
int gridW = 100;
int gridH = 100;
int columns = 11;
int rows = 11;
int boldness = 5;



size(gridW, gridH);
noSmooth();
background(0);
stroke(126);
for(int i = 0; i < columns; i++){
  line(gridspacing * i, 0, gridspacing * i, gridH);
}

for(int i = 0; i < rows; i++){
  line(0, gridspacing * i, gridW, gridspacing * i);
}


strokeWeight(boldness);
stroke(255,0,0);
point(40,50);
point(40,70);
point(60,70);
point(60,50);
point(50,40);
point(70,40);
point(70,60);

strokeWeight(boldness / 2);
line(50,40,70,40);
line(40,50,60,50);
line(40,70,60,70);

stroke(0,255,0);
line(40,50,40,70);
line(60,50,60,70);
line(70,40,70,60);

stroke(0,150,255);
line(40,50,50,40);
line(60,50,70,40);
line(60,70,70,60);

